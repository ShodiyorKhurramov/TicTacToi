<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.and   roid.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8951CD"

    android:gravity="center"

    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginHorizontal="12dp"

        app2:srcCompat="@drawable/image5"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginHorizontal="12dp"
        app2:srcCompat="@drawable/image2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="12dp"
        app2:srcCompat="@drawable/image3" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginHorizontal="12dp"
        app2:srcCompat="@drawable/image4" />

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="Brain Squid Game"
        android:textSize="60sp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_backround"
        android:text="@string/play1"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_backround"
        android:text="@string/play2"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_backround"
        android:text="@string/play3"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_backround"
        android:text="@string/options"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/button_backround"
        android:text="@string/AboutUs"

        android:textSize="25sp"
        android:textStyle="bold|italic" />


</LinearLayout>


